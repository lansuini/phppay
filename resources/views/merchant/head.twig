					<div class="modal fade" id="signKeyModal" tabindex="-1" role="dialog" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
									<h4 class="modal-title">查看加密key</h4>
								</div>

								<div class="modal-body v-modal-row">
									<div class="form-group clearfix">
										<label class="col-lg-3 control-label">谷歌验证码：</label>
										<input type="text" class="form-control" id="code" data-field="code" value="" />
										<input type="hidden" class="form-control" id="merchantNo" value="{{ merchantNo }}" />
									</div>
								</div>

								<div class="modal-footer">
									{# <input type="button" class="btn btn-default" value="关闭" data-dismiss="modal" /> #}
									<input type="button" class="btn btn-default" value="验证" data-dismiss="modal" class="close" id="btnResetSignKey" />
								</div>
							</div>
						</div>
					</div>

					<div class="modal fade" id="moneyModal" tabindex="-1" role="dialog" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
									<h4 class="modal-title">商户余额转账</h4>
								</div>

								<div class="modal-body v-modal-row">
									<input type="hidden" class="form-control" id="fromMerchantNo" data-field="fromMerchantNo" value="{{ merchantNo }}" />
									<div class="form-group clearfix">
										<label class="col-lg-3 control-label" for="toMerchantNo">商户号：</label>
										<input type="text" class="form-control" id="toMerchantNo" data-field="toMerchantNo" placeholder="请输入商户号" />
									</div>
									<div class="form-group clearfix">
										<label class="col-lg-3 control-label" for="shortName">商户名称：</label>
										<input type="text" class="form-control" id="shortName" data-field="shortName" placeholder="请输入商户名称" />
									</div>
									<div class="form-group clearfix">
										<label class="col-lg-3 control-label" for="money">转账金额：</label>
										<input type="text" class="form-control" id="money" data-field="money" placeholder="请输入转账金额" />
									</div>
									<div class="form-group clearfix">
										<label class="col-lg-3 control-label" for="gcode">谷歌验证码：</label>
										<input type="text" class="form-control" id="gcode" data-field="gcode" placeholder="请输入谷歌验证码" />
									</div>
									<div class="form-group clearfix">
										<label class="col-lg-3 control-label" for="paycode">支付密码：</label>
										<input type="password" class="form-control" id="paycode" data-field="paycode" placeholder="请输入支付密码" />
									</div>
								</div>

								<div class="modal-footer">
									<input type="button" class="btn btn-default" data-dismiss="modal" value="关闭" />
									<input type="button" class="btn btn-primary" value="提交" id="btnSubmit" />
								</div>
							</div>
