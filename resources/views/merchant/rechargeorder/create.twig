{{ include('./gm/menu.twig', {menus: menus}) }}

		<div class="content-page">
			<div class="content">
				<div class="container" id="divContainer">
					<div class="row v-breadcrumb">
						<ol class="pull-left breadcrumb">
							<li>商户后台</li>
							<li>充值</li>
							<li class="active" data-nav="rechargeorder-create">创建</li>
						</ol>
					</div>

				    <div class="row" id="divContainer">
						<div class="form-group clearfix">
						    <label class="col-lg-2 control-label" for="txtOrderAmount">付款金额：</label>
						    <input type="text" class="form-control" id="txtOrderAmount" data-field="orderAmount" placeholder="请输入付款金额" maxlength="15" />
						</div>


                        <div class="form-group clearfix">
                            <label class="col-lg-2 control-label" for="selChannel">选择充值渠道：</label>
                            {#<input class="form-control" id="selChannel" data-field="selChannel"  placeholder="选择充值渠道"/>#}
                            <select class="form-control" id="selSetId" data-field="setId"  placeholder="请输入充值渠道"></select>
                            {#<input type="hidden" class="form-control" id="selSetId" data-field="setId" />#}
							{#<input type="hidden" disabled class="form-control" id="txtPayType" data-field="payType" value={{ rechargeType }} />#}
                        </div>

						<div class="form-group clearfix">
							<label class="col-lg-2 control-label" for="selBankCode">选择充值银行：</label>
							<select class="form-control" id="selBankCode" name="bankCode" data-field="bankCode"  placeholder="请输入收款银行"></select>
						</div>


						<div class="form-group clearfix">
						    <label class="col-lg-2 control-label" for="txtOrderReason">付款原因：</label>
						    <input type="text" class="form-control" id="txtOrderReason" data-field="orderReason" placeholder="请输入付款原因" maxlength="100" />
						</div>

				        <div class="form-group clearfix v-control-block">
				            <input type="button" class="btn btn-primary" value="确认" id="btnConfirm" />
				        </div>
				    </div>
				
					<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-hidden="true">
				        <div class="modal-dialog">
				            <div class="modal-content">
				                <div class="modal-header">
				                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				                    <h4 class="modal-title">确认充值订单</h4>
				                </div>
				
				                <div class="modal-body v-modal-row">
									<div class="form-group clearfix">
									    <label class="col-lg-2 control-label">付款金额：</label>
									    <span id="spanOrderAmount"></span>
									</div>

			
									<div class="form-group clearfix">
									    <label class="col-lg-2 control-label">充值渠道：</label>
									    <span id="spanChannel"></span>
									</div>
									<div class="form-group clearfix">
										<label class="col-lg-2 control-label">充值银行：</label>
										<span id="spanBankCode"></span>
									</div>

									<div class="form-group clearfix">
									    <label class="col-lg-2 control-label">付款原因：</label>
									    <span id="spanOrderReason"></span>
									</div>
									
									<div class="form-group clearfix">
									    <label class="col-lg-2 control-label" for="txtApplyPerson">支付密码：</label>
									    <input type="password" autocomplete="new-password" class="form-control" id="txtApplyPerson" data-field="applyPerson" placeholder="请输入支付密码" maxlength="20" />
									</div>
				                </div>
				
				                <div class="modal-footer">
				                    <input type="button" class="btn btn-default" data-dismiss="modal" value="关闭" />
									<input type="button" class="btn btn-primary" id="btnSubmit" value="提交" />
				                </div>
				            </div>
				        </div>
				    </div>

					<div class="modal fade" id="resultModal" tabindex="-1" role="dialog" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
									<h4 class="modal-title">充值地址</h4>
								</div>

								<div class="modal-body v-modal-row">
									<div class="clearfix">
										<label class="col-lg-12 control-label">提示：若要复制链接转发，请勿点击打开，否则充值链接将会失效！</label>
										<span id="rechargeAddress"></span>
									</div>

								</div>

								<div class="modal-footer">
									<input type="button" class="btn btn-default" data-dismiss="modal" value="关闭" />
									<input type="button" class="btn btn-primary" value="复制地址" id="copyLink" />
									<input type="button" class="btn btn-primary" value="打开地址" id="openLink" />
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
